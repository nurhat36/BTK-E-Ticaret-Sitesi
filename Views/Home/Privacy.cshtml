@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script>
        // Sayfa yüklendiğinde animasyonları başlat
        document.addEventListener('DOMContentLoaded', function() {
            // Hero bölümü animasyonu
            gsap.from('.privacy-hero h1', {
                duration: 1,
                y: -50,
                opacity: 0,
                ease: 'power3.out'
            });
            
            gsap.from('.privacy-hero p', {
                duration: 1,
                y: 30,
                opacity: 0,
                delay: 0.3,
                ease: 'power3.out'
            });
            
            gsap.from('.privacy-hero .btn', {
                duration: 1,
                y: 30,
                opacity: 0,
                delay: 0.6,
                ease: 'power3.out',
                stagger: 0.1
            });
            
            // Bölüm animasyonları
            const sections = document.querySelectorAll('.privacy-section');
            
            sections.forEach((section, index) => {
                gsap.from(section, {
                    scrollTrigger: {
                        trigger: section,
                        start: 'top 80%',
                        toggleActions: 'play none none none'
                    },
                    duration: 0.8,
                    y: 50,
                    opacity: 0,
                    delay: index * 0.1,
                    ease: 'power3.out'
                });
            });
            
            // Flip kartlar için hover efekti
            const flipCards = document.querySelectorAll('.flip-card');
            
            flipCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    if (window.innerWidth > 768) {
                        this.querySelector('.flip-card-inner').style.transform = 'rotateY(180deg)';
                    }
                });
                
                card.addEventListener('mouseleave', function() {
                    if (window.innerWidth > 768) {
                        this.querySelector('.flip-card-inner').style.transform = 'rotateY(0deg)';
                    }
                });
            });
            
            // Haklar slider için kaydırma animasyonu
            const rightsSlider = document.querySelector('.rights-slider');
            
            if (rightsSlider) {
                let isDown = false;
                let startX;
                let scrollLeft;
                
                rightsSlider.addEventListener('mousedown', (e) => {
                    isDown = true;
                    startX = e.pageX - rightsSlider.offsetLeft;
                    scrollLeft = rightsSlider.scrollLeft;
                });
                
                rightsSlider.addEventListener('mouseleave', () => {
                    isDown = false;
                });
                
                rightsSlider.addEventListener('mouseup', () => {
                    isDown = false;
                });
                
                rightsSlider.addEventListener('mousemove', (e) => {
                    if(!isDown) return;
                    e.preventDefault();
                    const x = e.pageX - rightsSlider.offsetLeft;
                    const walk = (x - startX) * 2;
                    rightsSlider.scrollLeft = scrollLeft - walk;
                });
            }
        });
    </script>
