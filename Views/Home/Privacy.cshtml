@{
    ViewData["Title"] = "Gizlilik Politikası";
}

<div class="privacy-policy-page">
    <!-- Hero Bölümü -->
    <section class="privacy-hero text-white py-5">
        <div class="hero-overlay"></div>
        <div class="container py-5 position-relative z-index-2">
            <div class="row align-items-center">
                <div class="col-lg-8 mx-auto text-center">
                    <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">Gizlilik Politikası</h1>
                    <p class="lead mb-0 animate__animated animate__fadeIn animate__delay-1s">Son güncelleme: @DateTime.Now.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</p>
                    <div class="mt-4 animate__animated animate__fadeInUp animate__delay-1s">
                        <a href="#policy-content" class="btn btn-primary btn-lg btn-glow px-4 py-3 rounded-pill me-2">
                            <i class="fas fa-chevron-down me-2"></i> Politikayı İncele
                        </a>
                        <a href="/iletisim" class="btn btn-outline-light btn-lg px-4 py-3 rounded-pill">
                            <i class="fas fa-headset me-2"></i> Danışmanlık Al
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-wave">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" class="shape-fill"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" class="shape-fill"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" class="shape-fill"></path>
            </svg>
        </div>
    </section>

    <!-- Ana İçerik -->
    <section class="privacy-content py-5" id="policy-content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="privacy-card shadow-lg rounded-4 p-4 p-lg-5 animate__animated animate__fadeIn">
                        <div class="d-flex align-items-center mb-5">
                            <div class="privacy-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-4 pulse-animation">
                                <i class="fas fa-shield-alt fa-2x"></i>
                            </div>
                            <div>
                                <h2 class="h3 mb-2 text-gradient-primary">Gizliliğiniz Bizim İçin Önemli</h2>
                                <p class="text-muted mb-0">Kişisel bilgilerinizin korunmasına büyük önem veriyoruz</p>
                            </div>
                        </div>

                        <div class="privacy-sections">
                            <!-- Giriş -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">1</span>
                                    <span class="text-gradient-primary">Giriş</span>
                                </h3>
                                <div class="ps-5">
                                    <p>@(ViewData["SiteName"] ?? "Firmamız"), gizliliğinize büyük önem vermektedir. Bu Gizlilik Politikası, web sitemizi ziyaret ettiğinizde veya hizmetlerimizi kullandığınızda bilgilerinizi nasıl topladığımızı, kullandığımızı, paylaştığımızı ve koruduğumuzu açıklamaktadır.</p>
                                    <div class="highlight-box bg-primary bg-opacity-5 p-4 rounded-3 mt-4 border-start border-primary border-4">
                                        <div class="d-flex">
                                            <i class="fas fa-info-circle text-primary me-3 mt-1"></i>
                                            <p class="mb-0">KVKK (Kişisel Verilerin Korunması Kanunu) ve GDPR (Genel Veri Koruma Tüzüğü) uyumlu politika</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Toplanan Bilgiler -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">2</span>
                                    <span class="text-gradient-primary">Topladığımız Bilgiler</span>
                                </h3>
                                <div class="ps-5">
                                    <p>Siteye kayıt olduğunuzda, sipariş verdiğinizde, bültenimize abone olduğunuzda veya bir form doldurduğunuzda bize gönüllü olarak sağladığınız kişisel bilgileri toplayabiliriz. Bu bilgiler şunları içerebilir:</p>
                                    <div class="row g-4 mt-3">
                                        <div class="col-md-6">
                                            <div class="info-card bg-white p-4 rounded-4 shadow-sm h-100 hover-scale">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-primary bg-opacity-10 text-primary me-3">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <h4 class="h6 mb-0">Kimlik Bilgileri</h4>
                                                </div>
                                                <ul class="list-unstyled ps-4">
                                                    <li class="mb-2"><i class="fas fa-circle text-primary me-2" style="font-size: 0.5rem;"></i> Ad ve soyad</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-primary me-2" style="font-size: 0.5rem;"></i> TCKN (yasal gereklilik durumunda)</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-primary me-2" style="font-size: 0.5rem;"></i> Doğum tarihi</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-card bg-white p-4 rounded-4 shadow-sm h-100 hover-scale">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-success bg-opacity-10 text-success me-3">
                                                        <i class="fas fa-envelope"></i>
                                                    </div>
                                                    <h4 class="h6 mb-0">İletişim Bilgileri</h4>
                                                </div>
                                                <ul class="list-unstyled ps-4">
                                                    <li class="mb-2"><i class="fas fa-circle text-success me-2" style="font-size: 0.5rem;"></i> E-posta adresi</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-success me-2" style="font-size: 0.5rem;"></i> Telefon numarası</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-success me-2" style="font-size: 0.5rem;"></i> Adres bilgileri</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-card bg-white p-4 rounded-4 shadow-sm h-100 hover-scale">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-info bg-opacity-10 text-info me-3">
                                                        <i class="fas fa-credit-card"></i>
                                                    </div>
                                                    <h4 class="h6 mb-0">Finansal Bilgiler</h4>
                                                </div>
                                                <ul class="list-unstyled ps-4">
                                                    <li class="mb-2"><i class="fas fa-circle text-info me-2" style="font-size: 0.5rem;"></i> Ödeme bilgileri</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-info me-2" style="font-size: 0.5rem;"></i> Fatura bilgileri</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-info me-2" style="font-size: 0.5rem;"></i> Kredi kartı bilgileri (şifrelenmiş)</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-card bg-white p-4 rounded-4 shadow-sm h-100 hover-scale">
                                                <div class="d-flex align-items-center mb-3">
                                                    <div class="icon-circle bg-warning bg-opacity-10 text-warning me-3">
                                                        <i class="fas fa-laptop"></i>
                                                    </div>
                                                    <h4 class="h6 mb-0">Teknik Bilgiler</h4>
                                                </div>
                                                <ul class="list-unstyled ps-4">
                                                    <li class="mb-2"><i class="fas fa-circle text-warning me-2" style="font-size: 0.5rem;"></i> IP adresi</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-warning me-2" style="font-size: 0.5rem;"></i> Tarayıcı bilgisi</li>
                                                    <li class="mb-2"><i class="fas fa-circle text-warning me-2" style="font-size: 0.5rem;"></i> Cihaz bilgileri</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Bilgilerin Kullanımı -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">3</span>
                                    <span class="text-gradient-primary">Bilgilerinizi Nasıl Kullanıyoruz?</span>
                                </h3>
                                <div class="ps-5">
                                    <p>Topladığımız bilgileri aşağıdaki şekillerde kullanabiliriz:</p>
                                    <div class="timeline mt-4">
                                        <div class="timeline-item">
                                            <div class="timeline-badge bg-primary text-white">
                                                <i class="fas fa-shopping-cart"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <h4 class="h6 mb-2">Sipariş İşleme</h4>
                                                <p class="small text-muted mb-0">Siparişlerinizi ve işlemlerinizi gerçekleştirmek için</p>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-badge bg-success text-white">
                                                <i class="fas fa-envelope"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <h4 class="h6 mb-2">Müşteri Hizmetleri</h4>
                                                <p class="small text-muted mb-0">Soru ve taleplerinize yanıt vermek için</p>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-badge bg-info text-white">
                                                <i class="fas fa-chart-line"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <h4 class="h6 mb-2">Analiz ve Geliştirme</h4>
                                                <p class="small text-muted mb-0">Web sitemizi ve hizmetlerimizi iyileştirmek için</p>
                                            </div>
                                        </div>
                                        <div class="timeline-item">
                                            <div class="timeline-badge bg-warning text-white">
                                                <i class="fas fa-bullhorn"></i>
                                            </div>
                                            <div class="timeline-panel">
                                                <h4 class="h6 mb-2">Pazarlama</h4>
                                                <p class="small text-muted mb-0">İlgili ürün ve hizmetler hakkında bilgilendirme</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="alert alert-primary mt-4" role="alert">
                                        <div class="d-flex">
                                            <i class="fas fa-handshake me-3 mt-1"></i>
                                            <div>
                                                <h4 class="h6 mb-2">Açık Rıza Prensipleri</h4>
                                                <p class="mb-0">Pazarlama iletişimleri için sizden açık rıza alınacaktır. Dilediğiniz zaman abonelikten çıkabilirsiniz.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Veri Paylaşımı -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">4</span>
                                    <span class="text-gradient-primary">Veri Paylaşımı & Açıklama</span>
                                </h3>
                                <div class="ps-5">
                                    <p>Kişisel olarak tanımlanabilir bilgilerinizi aşağıdaki durumlar dışında üçüncü şahıslara satmayız, takas etmeyiz veya başka şekilde transfer etmeyiz:</p>
                                    
                                    <div class="flip-cards mt-4">
                                        <div class="flip-card">
                                            <div class="flip-card-inner">
                                                <div class="flip-card-front bg-primary text-white p-4 rounded-3">
                                                    <i class="fas fa-users fa-3x mb-3"></i>
                                                    <h4 class="h5 mb-0">Hizmet Sağlayıcılar</h4>
                                                </div>
                                                <div class="flip-card-back bg-white p-4 rounded-3 shadow-sm">
                                                    <p class="small">Web sitemizi işletmemize, işimizi yürütmemize veya size hizmet sunmamıza yardımcı olan güvenilir üçüncü şahıslarla, bu taraflar bilgilerin gizli tutulmasını kabul ettikleri sürece bilgi paylaşabiliriz.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flip-card">
                                            <div class="flip-card-inner">
                                                <div class="flip-card-front bg-success text-white p-4 rounded-3">
                                                    <i class="fas fa-gavel fa-3x mb-3"></i>
                                                    <h4 class="h5 mb-0">Yasal Zorunluluklar</h4>
                                                </div>
                                                <div class="flip-card-back bg-white p-4 rounded-3 shadow-sm">
                                                    <p class="small">Yasalara uygun olması, site politikalarımızı uygulamamız veya kendi haklarımızı, mülkiyetimizi veya güvenliğimizi korumamız gerektiğinde bilgileri açıklayabiliriz.</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="flip-card">
                                            <div class="flip-card-inner">
                                                <div class="flip-card-front bg-info text-white p-4 rounded-3">
                                                    <i class="fas fa-exchange-alt fa-3x mb-3"></i>
                                                    <h4 class="h5 mb-0">İş Transferleri</h4>
                                                </div>
                                                <div class="flip-card-back bg-white p-4 rounded-3 shadow-sm">
                                                    <p class="small">Bir birleşme, devralma veya varlıklarımızın tamamının veya bir kısmının satışı durumunda, bilgileriniz bu işlemin bir parçası olarak transfer edilebilir.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Veri Güvenliği -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">5</span>
                                    <span class="text-gradient-primary">Veri Güvenliği</span>
                                </h3>
                                <div class="ps-5">
                                    <div class="security-badge bg-success bg-opacity-10 text-success p-4 rounded-3 mb-4 border-start border-success border-4">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-lock fa-3x me-4 text-success"></i>
                                            <div>
                                                <h4 class="h5 mb-2">Bilgileriniz Güvende</h4>
                                                <p class="mb-0">Kişisel bilgileriniz güvenli ağlar arkasında saklanır ve yalnızca sınırlı yetkiye sahip personel tarafından erişilebilir.</p>
                                            </div>
                                        </div>
                                    </div>
                                    <p>Kişisel bilgilerinizin güvenliğini sağlamak için çeşitli güvenlik önlemleri uyguluyoruz:</p>
                                    <div class="security-features mt-4">
                                        <div class="row g-4">
                                            <div class="col-md-6">
                                                <div class="feature-card bg-white p-4 rounded-3 shadow-sm h-100 hover-lift">
                                                    <div class="d-flex align-items-center mb-3">
                                                        <div class="feature-icon bg-primary bg-opacity-10 text-primary rounded-circle p-3 me-3">
                                                            <i class="fas fa-lock"></i>
                                                        </div>
                                                        <h4 class="h6 mb-0">SSL Şifreleme</h4>
                                                    </div>
                                                    <p class="small text-muted mb-0">Tüm hassas veriler 256-bit SSL şifreleme ile korunmaktadır.</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="feature-card bg-white p-4 rounded-3 shadow-sm h-100 hover-lift">
                                                    <div class="d-flex align-items-center mb-3">
                                                        <div class="feature-icon bg-success bg-opacity-10 text-success rounded-circle p-3 me-3">
                                                            <i class="fas fa-shield-alt"></i>
                                                        </div>
                                                        <h4 class="h6 mb-0">Güvenlik Duvarları</h4>
                                                    </div>
                                                    <p class="small text-muted mb-0">Gelişmiş güvenlik duvarları ile yetkisiz erişim engellenir.</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="feature-card bg-white p-4 rounded-3 shadow-sm h-100 hover-lift">
                                                    <div class="d-flex align-items-center mb-3">
                                                        <div class="feature-icon bg-info bg-opacity-10 text-info rounded-circle p-3 me-3">
                                                            <i class="fas fa-user-shield"></i>
                                                        </div>
                                                        <h4 class="h6 mb-0">Yetkilendirme</h4>
                                                    </div>
                                                    <p class="small text-muted mb-0">Çok faktörlü kimlik doğrulama ile erişim kontrolü sağlanır.</p>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="feature-card bg-white p-4 rounded-3 shadow-sm h-100 hover-lift">
                                                    <div class="d-flex align-items-center mb-3">
                                                        <div class="feature-icon bg-warning bg-opacity-10 text-warning rounded-circle p-3 me-3">
                                                            <i class="fas fa-sync-alt"></i>
                                                        </div>
                                                        <h4 class="h6 mb-0">Düzenli Yedekleme</h4>
                                                    </div>
                                                    <p class="small text-muted mb-0">Verileriniz düzenli olarak yedeklenir ve güvenli sunucularda saklanır.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Haklarınız -->
                            <div class="privacy-section mb-5 animate__animated animate__fadeInUp">
                                <h3 class="h4 mb-4 d-flex align-items-center">
                                    <span class="section-number bg-gradient-primary text-white rounded-circle me-3">6</span>
                                    <span class="text-gradient-primary">Haklarınız</span>
                                </h3>
                                <div class="ps-5">
                                    <p>KVKK ve GDPR kapsamında kişisel verilerinizle ilgili aşağıdaki haklara sahipsiniz:</p>
                                    
                                    <div class="rights-slider mt-4">
                                        <div class="rights-slide bg-primary text-white p-4 rounded-3">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-eye fa-2x me-3"></i>
                                                <h4 class="h5 mb-0">Erişim Hakkı</h4>
                                            </div>
                                            <p class="small mb-0">Size ait kişisel verilerin işlenip işlenmediğini öğrenme, işlenmişse buna ilişkin bilgi talep edebilirsiniz.</p>
                                        </div>
                                        <div class="rights-slide bg-success text-white p-4 rounded-3">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-edit fa-2x me-3"></i>
                                                <h4 class="h5 mb-0">Düzeltme Hakkı</h4>
                                            </div>
                                            <p class="small mb-0">Eksik veya yanlış işlenmiş verilerinizin düzeltilmesini talep edebilirsiniz.</p>
                                        </div>
                                        <div class="rights-slide bg-info text-white p-4 rounded-3">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-trash-alt fa-2x me-3"></i>
                                                <h4 class="h5 mb-0">Silme Hakkı</h4>
                                            </div>
                                            <p class="small mb-0">Verilerinizin silinmesini isteme hakkına sahipsiniz (Unutulma Hakkı).</p>
                                        </div>
                                        <div class="rights-slide bg-warning text-white p-4 rounded-3">
                                            <div class="d-flex align-items-center mb-3">
                                                <i class="fas fa-ban fa-2x me-3"></i>
                                                <h4 class="h5 mb-0">İtiraz Hakkı</h4>
                                            </div>
                                            <p class="small mb-0">Kişisel verilerinizin işlenmesine itiraz edebilirsiniz.</p>
                                        </div>
                                    </div>
                                    
                                    <div class="request-form mt-5 p-4 bg-light rounded-3 border-start border-primary border-4">
                                        <h4 class="h5 mb-3">Haklarınızı Kullanmak İçin</h4>
                                        <form>
                                            <div class="row g-3">
                                                <div class="col-md-6">
                                                    <label class="form-label">Adınız Soyadınız</label>
                                                    <input type="text" class="form-control" placeholder="Ad Soyad">
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label">E-posta Adresiniz</label>
                                                    <input type="email" class="form-control" placeholder="email@ornek.com">
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">Talep Ettiğiniz Hak</label>
                                                    <select class="form-select">
                                                        <option selected>Seçiniz...</option>
                                                        <option>Erişim Hakkı</option>
                                                        <option>Düzeltme Hakkı</option>
                                                        <option>Silme Hakkı</option>
                                                        <option>İtiraz Hakkı</option>
                                                    </select>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">Ek Açıklama</label>
                                                    <textarea class="form-control" rows="3" placeholder="Eklemek istedikleriniz..."></textarea>
                                                </div>
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-paper-plane me-2"></i> Talebi Gönder
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

