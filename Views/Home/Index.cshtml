@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script>
        // Hero slider functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sliderItems = document.querySelectorAll('.slider-item');
            const sliderDots = document.querySelectorAll('.slider-dot');
            let currentSlide = 0;

            function showSlide(index) {
                sliderItems.forEach(item => item.classList.remove('active'));
                sliderDots.forEach(dot => dot.classList.remove('active'));

                sliderItems[index].classList.add('active');
                sliderDots[index].classList.add('active');
                currentSlide = index;
            }

            function nextSlide() {
                let nextSlide = currentSlide + 1;
                if (nextSlide >= sliderItems.length) nextSlide = 0;
                showSlide(nextSlide);
            }

            // Auto slide every 5 seconds
            setInterval(nextSlide, 5000);

            // Dot click functionality
            sliderDots.forEach((dot, index) => {
                dot.addEventListener('click', () => showSlide(index));
            });

            // Countdown timer for campaign
            function updateCountdown() {
                const now = new Date();
                const endDate = new Date();
                endDate.setDate(now.getDate() + 5); // 5 days from now

                const diff = endDate - now;

                const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                document.getElementById('days').textContent = days.toString().padStart(2, '0');
                document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
                document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
                document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Add to cart functionality
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const productId = this.dataset.productId;
                    const button = this;

                    // Add animation
                    button.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                    button.classList.add('disabled');

                    // Simulate API call
                    setTimeout(() => {
                        fetch('/Cart/Add', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({ productId: productId, quantity: 1 })
                        })
                        .then(response => response.json())
                        .then(data => {
                            // Update cart count
                            document.getElementById('cart-count').textContent = data.cartItemCount;

                            // Show success
                            button.innerHTML = '<i class="fas fa-check"></i>';

                            // Show notification
                            Toastify({
                                text: "Ürün sepete eklendi",
                                duration: 3000,
                                close: true,
                                gravity: "top",
                                position: "right",
                                backgroundColor: "var(--success-color)",
                            }).showToast();
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            button.innerHTML = '<i class="fas fa-times"></i>';

                            Toastify({
                                text: "Bir hata oluştu",
                                duration: 3000,
                                close: true,
                                gravity: "top",
                                position: "right",
                                backgroundColor: "var(--danger-color)",
                            }).showToast();
                        })
                        .finally(() => {
                            // Reset button after 2 seconds
                            setTimeout(() => {
                                button.innerHTML = '<i class="fas fa-shopping-cart"></i>';
                                button.classList.remove('disabled');
                            }, 2000);
                        });
                    }, 800);
                });
            });

            // Add to wishlist functionality
            document.querySelectorAll('.add-to-wishlist').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const productId = this.dataset.productId;
                    const button = this;

                    // Toggle icon
                    if (button.querySelector('i').classList.contains('far')) {
                        button.innerHTML = '<i class="fas fa-heart"></i>';

                        // Show notification
                        Toastify({
                            text: "Ürün favorilere eklendi",
                            duration: 3000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            backgroundColor: "var(--danger-color)",
                        }).showToast();
                    } else {
                        button.innerHTML = '<i class="far fa-heart"></i>';
                    }
                });
            });

            // Quick view functionality
            document.querySelectorAll('.quick-view').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();

                    const productId = this.dataset.productId;

                    // Here you would typically fetch product details and show in a modal
                    console.log('Quick view for product:', productId);

                    // Example modal show
                    $('#quickViewModal').modal('show');
                });
            });

            // Newsletter form submission
            document.querySelector('.newsletter-form')?.addEventListener('submit', function(e) {
                e.preventDefault();

                const email = this.querySelector('input[type="email"]').value;

                // Simulate subscription
                setTimeout(() => {
                    Toastify({
                        text: "Aboneliğiniz başarıyla tamamlandı!",
                        duration: 3000,
                        close: true,
                        gravity: "top",
                        position: "right",
                        backgroundColor: "var(--success-color)",
                    }).showToast();

                    this.reset();
                }, 1000);
            });
        });
    </script>
