@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.11.4/gsap.min.js"></script>
    <script>
        // Hero section animations
        document.addEventListener('DOMContentLoaded', function() {
            // Animate hero elements on load
            gsap.from('.hero-badge', {
                duration: 1,
                y: -20,
                opacity: 0,
                ease: 'back.out'
            });

            gsap.from('.hero-title', {
                duration: 1,
                y: 30,
                opacity: 0,
                delay: 0.2,
                ease: 'power3.out'
            });

            gsap.from('.hero-subtitle', {
                duration: 1,
                y: 30,
                opacity: 0,
                delay: 0.4,
                ease: 'power3.out'
            });

            gsap.from('.hero-buttons', {
                duration: 1,
                y: 30,
                opacity: 0,
                delay: 0.6,
                ease: 'power3.out'
            });

            gsap.from('.hero-main-img', {
                duration: 1,
                x: 100,
                opacity: 0,
                delay: 0.3,
                ease: 'back.out'
            });

            gsap.from('.hero-secondary-img', {
                duration: 1,
                x: -100,
                opacity: 0,
                delay: 0.5,
                ease: 'back.out'
            });

            // Add to cart animation
            $('.add-to-cart').click(function(e) {
                e.preventDefault();
                e.stopPropagation();

                var productId = $(this).data('product-id');
                var button = $(this);

                // Add animation class
                button.addClass('animate__animated animate__pulse');

                // Disable button during request
                button.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i>');

                // Simulate API call
                setTimeout(function() {
                    $.post('/Cart/Add', { productId: productId, quantity: 1 })
                        .done(function(data) {
                            // Show success
                            button.html('<i class="fas fa-check"></i>');

                            // Update cart count
                            $('#cart-count').text(data.cartItemCount);

                            // Show success notification
                            toastr.success('Ürün sepete eklendi');
                        })
                        .fail(function() {
                            // Show error
                            button.html('<i class="fas fa-times"></i>');
                            toastr.error('Bir hata oluştu');
                        })
                        .always(function() {
                            // Reset button after 2 seconds
                            setTimeout(function() {
                                button.prop('disabled', false)
                                    .html('<i class="fas fa-shopping-cart"></i>')
                                    .removeClass('animate__animated animate__pulse');
                            }, 2000);
                        });
                }, 800);
            });

            // Initialize brand slider animation
            gsap.to('.brands-slider', {
                duration: 20,
