@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <style>
        :root {
            --primary-color: #6c5ce7;
            --primary-hover: #5649c7;
            --secondary-color: #a29bfe;
            --danger-color: #ff7675;
            --light-color: #f8f9fa;
            --dark-color: #2d3436;
            --text-color: #333;
            --text-muted: #6c757d;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            background: linear-gradient(135deg, var(--dark-color) 0%, #000 100%);
            color: white;
            padding: 5rem 0;
            overflow: hidden;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-badge {
            display: inline-block;
            background-color: var(--danger-color);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.8rem;
            font-weight: bold;
            margin-bottom: 1rem;
            animation: pulse 2s infinite;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            line-height: 1.2;
        }

        .hero-subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            opacity: 0.9;
        }

        .hero-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-shine {
            position: relative;
            overflow: hidden;
        }

            .btn-shine::after {
                content: '';
                position: absolute;
                top: -50%;
                left: -50%;
                width: 200%;
                height: 200%;
                background: linear-gradient( to bottom right, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0) 60% );
                transform: rotate(30deg);
                transition: all 0.3s;
            }

            .btn-shine:hover::after {
                animation: shine 1.5s infinite;
            }

        .hero-image-container {
            position: relative;
            height: 400px;
        }

        .hero-main-img {
            position: absolute;
            width: 70%;
            right: 0;
            top: 0;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.3);
            z-index: 2;
        }

        .hero-secondary-img {
            position: absolute;
            width: 60%;
            left: 0;
            bottom: 0;
            border-radius: 15px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
            z-index: 1;
        }

        .floating-animation {
            animation: float 6s ease-in-out infinite;
        }

        .floating-animation-delay {
            animation: float 6s ease-in-out infinite reverse;
            animation-delay: 1s;
        }

        .hero-wave {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
        }

            .hero-wave svg {
                display: block;
                width: 100%;
                height: 60px;
            }

        .fill-white {
            fill: #fff;
        }

        /* Sections */
        .section-header {
            margin-bottom: 3rem;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            position: relative;
            display: inline-block;
            margin-bottom: 0.5rem;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 50px;
                height: 4px;
                background: var(--primary-color);
                border-radius: 2px;
            }

        .section-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
        }

        /* Category Cards */
        .category-card {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 2rem 1rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            text-decoration: none;
            color: var(--text-color);
            height: 100%;
        }

            .category-card:hover {
                transform: translateY(-10px);
                box-shadow: 0 15px 30px rgba(0,0,0,0.1);
            }

        .category-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            color: white;
            font-size: 1.5rem;
            transition: all 0.3s ease;
        }

        .category-card:hover .category-icon {
            transform: rotate(15deg) scale(1.1);
        }

        .category-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .category-count {
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        /* Product Cards */
        .product-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            transition: all 0.3s ease;
            height: 100%;
        }

