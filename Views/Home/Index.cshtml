@model BTKETicaretSitesi.Models.ViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section with Gradient Background -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-1 order-2">
                <div class="hero-content">
                    <span class="hero-badge animate__animated animate__fadeIn">YENİ SEZON</span>
                    <h1 class="hero-title animate__animated animate__fadeInUp">Alışverişin Premium Adresi</h1>
                    <p class="hero-subtitle animate__animated animate__fadeInUp animate__delay-1s">Kaliteli ürünler, hızlı teslimat ve güvenli alışverişin tek adresi</p>
                    <div class="hero-buttons animate__animated animate__fadeInUp animate__delay-2s">
                        <a href="#featured-products" class="btn btn-primary btn-lg btn-hover-shine">
                            <i class="fas fa-chevron-right me-2"></i> Hemen Keşfet
                        </a>
                        <a href="#" class="btn btn-outline-light btn-lg ms-2">
                            <i class="fas fa-percent me-2"></i> İndirimler
                        </a>
                    </div>
                    <div class="hero-stats mt-4 animate__animated animate__fadeIn animate__delay-3s">
                        <div class="stat-item">
                            <div class="stat-number">10.000+</div>
                            <div class="stat-label">Mutlu Müşteri</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">500+</div>
                            <div class="stat-label">Marka</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">7/24</div>
                            <div class="stat-label">Destek</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-2 order-1">
                <div class="hero-image-slider">
                    <!-- Mağazanızdaki gerçek ürün görselleri burada olacak -->
                    <div class="slider-item active">
                        <img src="/images/hero-products/product1.jpg" alt="Öne Çıkan Ürün 1" class="img-fluid rounded-4 shadow-lg">
                    </div>
                    <div class="slider-item">
                        <img src="/images/hero-products/product2.jpg" alt="Öne Çıkan Ürün 2" class="img-fluid rounded-4 shadow-lg">
                    </div>
                    <div class="slider-item">
                        <img src="/images/hero-products/product3.jpg" alt="Öne Çıkan Ürün 3" class="img-fluid rounded-4 shadow-lg">
                    </div>
                    <div class="slider-dots">
                        <button class="slider-dot active"></button>
                        <button class="slider-dot"></button>
                        <button class="slider-dot"></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="hero-wave">
        <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
            <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
                  opacity=".25"
                  class="fill-white"></path>
            <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z"
                  opacity=".5"
                  class="fill-white"></path>
            <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z"
                  class="fill-white"></path>
        </svg>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section py-5">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Kategoriler</h2>
            <p class="section-subtitle">Binlerce ürünü keşfetmek için kategorileri inceleyin</p>
        </div>

        <div class="row g-4">
            @foreach (var category in Model.Categories)
            {
                <div class="col-6 col-md-4 col-lg-3">
                    <a href="Urunler/category/@category.Slug" class="category-card">
                        <div class="category-icon">
                            <i class="fas fa-@(GetCategoryIcon(category.Name))"></i>
                        </div>
                        <h3 class="category-title">@category.Name</h3>
                        <span class="category-count">@(new Random().Next(50, 500)) ürün</span>
                        <div class="category-hover-img">
                            <img src="/images/categories/@(category.Slug).jpg" alt="@category.Name">
                        </div>
                    </a>
                </div>
            }
        </div>

        <div class="text-center mt-5">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-list me-2"></i> Tüm Kategoriler
            </a>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products-section py-5 bg-light" id="featured-products">
    <div class="container">
        <div class="section-header d-flex justify-content-between align-items-center mb-5">
            <div>
                <h2 class="section-title">Öne Çıkan Ürünler</h2>
                <p class="section-subtitle">En çok beğenilen ve satılan ürünler</p>
            </div>
            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">
                Tüm Ürünler <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="product-card">
                        
                        <div class="product-image-container">
                            <a asp-controller="SaleProducts" asp-action="Details" asp-route-id="@product.Id">
                                @{
                                    var mainImage = product.Images.FirstOrDefault(pi => pi.IsMainImage);
                                    var imageUrl = mainImage != null ? mainImage.ImageUrl : "/images/products/default.jpg";
                                }
                                <img src="@imageUrl" class="product-image" alt="@product.Name">
                            </a>
                            <div class="product-actions">
                                <button class="btn-action add-to-cart" data-product-id="@product.Id" title="Sepete Ekle">
                                    <i class="fas fa-shopping-cart"></i>
                                </button>
                                <button class="btn-action add-to-wishlist" data-product-id="@product.Id" title="Favorilere Ekle">
                                    <i class="far fa-heart"></i>
                                </button>
                                <button class="btn-action quick-view" data-product-id="@product.Id" title="Hızlı Görünüm">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                        </div>
                        <div class="product-info">
                            <div class="product-meta">
                                
                               
                            </div>
                            <h3 class="product-title">
                                <a asp-controller="SaleProducts" asp-action="Details" asp-route-id="@product.Id">@product.Name</a>
                            </h3>
                           
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Campaign Banner -->
<section class="campaign-banner py-5">
    <div class="container">
        <div class="campaign-card bg-gradient text-white rounded-4 overflow-hidden">
            <div class="row align-items-center">
                <div class="col-lg-6 p-4 p-lg-5">
                    <span class="campaign-tag">SINIRLI SÜRE</span>
                    <h2 class="campaign-title">Yaz İndirimleri Başladı!</h2>
                    <p class="campaign-text">Seçili ürünlerde %50'ye varan indirimlerle sınırlı stoklarda</p>
                    <div class="countdown mb-3">
                        <div class="countdown-item">
                            <span class="countdown-number" id="days">05</span>
                            <span class="countdown-label">Gün</span>
                        </div>
                        <div class="countdown-item">
                            <span class="countdown-number" id="hours">12</span>
                            <span class="countdown-label">Saat</span>
                        </div>
                        <div class="countdown-item">
                            <span class="countdown-number" id="minutes">45</span>
                            <span class="countdown-label">Dak</span>
                        </div>
                        <div class="countdown-item">
                            <span class="countdown-number" id="seconds">30</span>
                            <span class="countdown-label">San</span>
                        </div>
                    </div>
                    <a href="#" class="btn btn-light btn-lg rounded-pill">
                        <i class="fas fa-chevron-right me-2"></i> Hemen Al
                    </a>
                </div>
                <div class="col-lg-6 d-none d-lg-block">
                    <div class="campaign-image-container">
                        <!-- Mağazanızdaki kampanya görseli -->
                        <img src="/images/campaigns/summer-sale.jpg"
                             alt="Yaz İndirimleri"
                             class="campaign-image floating-animation">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Brands Section -->
<section class="brands-section py-5 bg-white">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Güvenilen Markalar</h2>
            <p class="section-subtitle">Dünyaca ünlü markalarla iş birliği içindeyiz</p>
