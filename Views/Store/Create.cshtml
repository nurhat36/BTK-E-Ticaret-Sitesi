@model BTKETicaretSitesi.Models.ViewModels.StoreViewModel

@{
    ViewData["Title"] = "Mağaza Oluştur";
}

<h2>Yeni Mağaza Oluştur</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogoImage" class="control-label"></label>
        <input type="file" asp-for="LogoImage" class="form-control-file" />
        <span asp-validation-for="LogoImage" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Mağaza Oluştur" class="btn btn-primary" />
    </div>
</form>