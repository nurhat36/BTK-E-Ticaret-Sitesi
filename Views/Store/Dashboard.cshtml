@model BTKETicaretSitesi.Models.Store

@{
    ViewData["Title"] = "Mağaza Paneli";
}

<div class="store-dashboard">
    <div class="store-header">
        @if (!string.IsNullOrEmpty(Model.LogoUrl))
        {
            <img src="@Model.LogoUrl" class="store-logo" alt="@Model.Name Logosu">
        }
        <h2>@Model.Name Mağaza Paneli</h2>
        <p class="store-status @(Model.IsApproved ? "text-success" : "text-warning")">
            @(Model.IsApproved ? "Onaylandı" : "Onay Bekliyor")
        </p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Mağaza Bilgileri</h5>
                    <p class="card-text">@Model.Description</p>
                    <a asp-action="Edit" class="btn btn-primary">Düzenle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ürünler</h5>
                    <p class="card-text">Toplam @Model.Products.Count ürün</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-success">Ürünleri Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">İstatistikler</h5>
                    <p class="card-text">Mağaza performansı</p>
                    <a asp-action="Stats" class="btn btn-info">Detayları Gör</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .store-logo {
        max-width: 100px;
        max-height: 100px;
        border-radius: 50%;
        margin-right: 20px;
    }

    .store-header {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .store-status {
        margin-left: auto;
        font-weight: bold;
    }
</style>