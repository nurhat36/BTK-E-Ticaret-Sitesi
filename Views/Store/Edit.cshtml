@model BTKETicaretSitesi.Models.ViewModels.StoreEditViewModel

@{
    Layout = "_ManagementLayout";
    ViewData["Title"] = "Mağaza Düzenle";
}

<h2>Mağaza Düzenle</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LogoImage" class="control-label"></label>
        <input type="file" asp-for="LogoImage" class="form-control-file" />
        <span asp-validation-for="LogoImage" class="text-danger"></span>
        @if (!string.IsNullOrEmpty(Model.CurrentLogoUrl))
        {
            <div class="mt-2">
                <img src="@Model.CurrentLogoUrl" width="100" class="img-thumbnail" />
                <p class="text-muted">Mevcut logo</p>
            </div>
        }
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
        <a asp-action="Dashboard" class="btn btn-secondary">İptal</a>
    </div>
</form>