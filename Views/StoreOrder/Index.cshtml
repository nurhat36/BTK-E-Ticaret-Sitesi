@model IEnumerable<BTKETicaretSitesi.Models.Order>

@{
    ViewData["Title"] = "Sipariş Yönetimi";
    Layout = "_ManagementLayout";
}

<div class="container-fluid px-4">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden mt-4" style="border: 1px solid rgba(0,0,0,0.08);">
        <div class="card-header py-3 border-0 d-flex flex-column flex-md-row justify-content-between align-items-center"
             style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
            <h5 class="mb-3 mb-md-0 fw-semibold text-white">
                <i class="fas fa-box-open me-2"></i> Sipariş Yönetimi
            </h5>
            <div class="d-flex flex-wrap gap-2">
                <a asp-action="Index" class="btn btn-sm @(ViewBag.Status == null ? "btn-white text-primary" : "btn-outline-light") rounded-pill px-3">
                    <i class="fas fa-list me-1"></i> Tümü
                </a>
                <a asp-action="Index" asp-route-status="Pending" class="btn btn-sm @(ViewBag.Status == OrderStatus.Pending ? "btn-white text-warning" : "btn-outline-light") rounded-pill px-3">
                    <i class="fas fa-clock me-1"></i> Bekleyenler
                </a>
                <a asp-action="Index" asp-route-status="Processing" class="btn btn-sm @(ViewBag.Status == OrderStatus.Processing ? "btn-white text-info" : "btn-outline-light") rounded-pill px-3">
                    <i class="fas fa-cog me-1"></i> Hazırlanıyor
                </a>
                <a asp-action="Index" asp-route-status="Shipped" class="btn btn-sm @(ViewBag.Status == OrderStatus.Shipped ? "btn-white text-primary" : "btn-outline-light") rounded-pill px-3">
                    <i class="fas fa-truck me-1"></i> Kargoda
                </a>
                <a asp-action="Index" asp-route-status="Delivered" class="btn btn-sm @(ViewBag.Status == OrderStatus.Delivered ? "btn-white text-success" : "btn-outline-light") rounded-pill px-3">
                    <i class="fas fa-check-circle me-1"></i> Teslim Edilenler
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive rounded-3 overflow-hidden">
                <table class="table table-hover mb-0" id="dataTable">
                    <thead class="" style="background-color: #f8fafc;">
                        <tr>
                            <th class="ps-4" style="background-color: #f1f5f9;">Sipariş No</th>
                            <th>Müşteri</th>
                            <th>Tarih</th>
                            <th>Toplam</th>
                            <th>Durum</th>
                            <th class="text-end pe-4" style="background-color: #f1f5f9;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr class="border-top" style="border-color: #f1f5f9 !important;">
                                <td class="ps-4 fw-medium" style="background-color: #f8fafc;">@order.OrderNumber</td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-2" style="background-color: #e2e8f0; color: #64748b; width: 28px; height: 28px; line-height: 28px; text-align: center; border-radius: 50%;">
                                            @order.Customer?.UserName?[0].ToString().ToUpper()
                                        </div>
                                        @order.Customer?.UserName
                                    </div>
                                </td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td class="fw-medium text-primary">@order.OrderTotal.ToString("C")</td>
                                <td>
                                    <span class="badge rounded-pill @GetStatusBadgeClass(order.Status) py-2 px-3">
                                        <i class="@GetStatusIcon(order.Status) me-1"></i> @order.Status
                                    </span>
                                </td>
                                <td class="text-end pe-4" style="background-color: #f8fafc;">
                                    <a asp-action="Details" asp-route-orderNumber="@order.OrderNumber"
                                       class="btn btn-sm btn-primary rounded-pill px-3">
                                        <i class="fas fa-eye me-1"></i> Detay
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #64748b;
            border-bottom: 1px solid #e2e8f0 !important;
            padding: 12px 16px;
        }

        .table td {
            padding: 12px 16px;
            vertical-align: middle;
        }

        .badge {
            font-weight: 500;
            font-size: 0.75rem;
            display: inline-flex;
            align-items: center;
        }

        tr:hover {
            background-color: #f8fafc !important;
            transform: translateY(-1px);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            transition: all 0.2s ease;
        }

        .bg-warning-soft {
            background-color: rgba(234, 179, 8, 0.1) !important;
        }

        .bg-info-soft {
            background-color: rgba(6, 182, 212, 0.1) !important;
        }

        .bg-primary-soft {
            background-color: rgba(59, 130, 246, 0.1) !important;
        }

        .bg-success-soft {
            background-color: rgba(16, 185, 129, 0.1) !important;
        }

        .bg-danger-soft {
            background-color: rgba(239, 68, 68, 0.1) !important;
        }

        .bg-secondary-soft {
            background-color: rgba(100, 116, 139, 0.1) !important;
        }

        .bg-light-soft {
            background-color: rgba(241, 245, 249, 0.5) !important;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json'
                },
                dom: '<"row"<"col-md-6"l><"col-md-6"f>>rt<"row"<"col-md-6"i><"col-md-6"p>>',
                pageLength: 10,
                responsive: true,
                ordering: true,
                order: [[2, 'desc']],
                initComplete: function() {
                    $('.dataTables_filter input').addClass('form-control form-control-sm');
                    $('.dataTables_length select').addClass('form-select form-select-sm');
                }
            });
        });
    </script>
}

@functions {
    string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "bg-warning-soft text-amber-600",
            OrderStatus.Processing => "bg-info-soft text-cyan-600",
            OrderStatus.Shipped => "bg-primary-soft text-blue-600",
            OrderStatus.Delivered => "bg-success-soft text-emerald-600",
            OrderStatus.Cancelled => "bg-danger-soft text-red-600",
            OrderStatus.Refunded => "bg-secondary-soft text-slate-600",
            _ => "bg-light-soft text-slate-600"
        };
    }

    string GetStatusIcon(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "fas fa-clock",
            OrderStatus.Processing => "fas fa-cog fa-spin",
            OrderStatus.Shipped => "fas fa-truck",
            OrderStatus.Delivered => "fas fa-check-circle",
            OrderStatus.Cancelled => "fas fa-times-circle",
            OrderStatus.Refunded => "fas fa-undo",
            _ => "fas fa-question-circle"
        };
    }
}