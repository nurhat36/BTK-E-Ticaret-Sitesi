@{
    ViewData["Title"] = "Erişim Engellendi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-1 text-danger">403</h1>
            <h2 class="text-danger">Erişim Engellendi</h2>
            <p class="lead mt-4">Bu sayfayı görüntüleme yetkiniz bulunmamaktadır.</p>

            @if (User.Identity.IsAuthenticated)
            {
                <p>Giriş yaptığınız hesap: <strong>@User.Identity.Name</strong></p>
            }
            else
            {
                <p>Bu sayfayı görüntülemek için giriş yapmalısınız.</p>
            }

            <div class="mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home"></i> Ana Sayfaya Dön
                </a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success">
                        <i class="fas fa-sign-in-alt"></i> Giriş Yap
                    </a>
                }
            </div>
        </div>
    </div>
</div>