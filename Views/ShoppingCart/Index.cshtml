@model BTKETicaretSitesi.Models.ShoppingCart

@{
    ViewData["Title"] = "Alışveriş Sepeti";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold">
            <i class="fas fa-shopping-cart text-primary me-2"></i> Alışveriş Sepetiniz
        </h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary rounded-pill">
            <i class="fas fa-arrow-left me-1"></i> Alışverişe Devam Et
        </a>
    </div>

    @if (Model.Items == null || !Model.Items.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart text-muted" style="font-size: 5rem;"></i>
            </div>
            <h4 class="fw-semibold mb-3">Sepetiniz Boş</h4>
            <p class="text-muted mb-4">Sepetinizde henüz ürün bulunmamaktadır. Hemen alışverişe başlayın!</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-store me-1"></i> Ürünleri Keşfet
            </a>
        </div>
    }
    else
    {
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden mb-4">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 border-0">Ürün</th>
                            <th class="border-0">Varyant</th>
                            <th class="border-0">Fiyat</th>
                            <th class="border-0">Adet</th>
                            <th class="border-0">Toplam</th>
                            <th class="pe-4 border-0 text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr class="border-top">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        @{
                                            var mainImage = item.Product.Images?.FirstOrDefault(img => img.IsMainImage);
                                            var imageUrl = mainImage?.ImageUrl ?? "/images/default-product.png";
                                        }
                                        <img src="@imageUrl" alt="@item.Product.Name" width="60" class="rounded-2 me-3" style="object-fit: cover; height: 60px;">
                                        <div>
                                            <h6 class="mb-0">@item.Product.Name</h6>
                                            <small class="text-muted">SKU: @item.Product.SKU</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (item.Variant != null)
                                    {
                                        <span class="badge bg-primary-soft text-primary">@item.Variant.PriceDifference</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        var price = item.Variant?.PriceDifference ?? item.Product.Price;
                                    }
                                    <span class="fw-bold">@price.ToString("C")</span>
                                </td>
                                <td>
                                    <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <input type="number" name="newQuantity" value="@item.Quantity" min="1"
                                               class="form-control form-control-sm rounded-pill" style="width: 70px;" />
                                        <button type="submit" class="btn btn-sm btn-outline-primary ms-2 rounded-pill">
                                            <i class="fas fa-sync-alt fa-xs"></i>
                                        </button>
                                    </form>
                                </td>
                                <td>
                                    @{
                                        var totalPrice = (item.Variant?.PriceDifference ?? item.Product.Price) * item.Quantity;
                                    }
                                    <span class="fw-bold text-primary">@totalPrice.ToString("C")</span>
                                </td>
                                <td class="pe-4 text-end">
                                    <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger rounded-circle"
                                                data-bs-toggle="tooltip" data-bs-title="Kaldır">
                                            <i class="fas fa-trash-alt fa-xs"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-light">
                        <tr>
                            <td colspan="4" class="text-end border-0 fw-bold">Toplam:</td>
                            <td class="border-0 fw-bold text-primary fs-5">
                                @Model.Items.Sum(i => (i.Variant?.PriceDifference ?? i.Product.Price) * i.Quantity).ToString("C")
                            </td>
                            <td class="pe-4 border-0"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
            <form asp-action="ClearCart" method="post" class="mb-3 mb-md-0">
                <button type="submit" class="btn btn-outline-danger rounded-pill px-4">
                    <i class="fas fa-trash me-1"></i> Sepeti Temizle
                </button>
            </form>
            <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary rounded-pill px-4 py-2">
                <i class="fas fa-credit-card me-2"></i> Ödemeye Geç (@Model.Items.Sum(i => (i.Variant?.PriceDifference ?? i.Product.Price) * i.Quantity).ToString("C"))
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .bg-primary-soft {
            background-color: rgba(13, 110, 253, 0.1) !important;
        }

        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            color: #6c757d;
            border-bottom-width: 1px;
        }

        tr:hover {
            background-color: #f8f9fa !important;
        }

        .form-control-sm {
            height: calc(1.5em + 0.5rem + 2px);
            padding: 0.25rem 0.5rem;
        }

        .btn-outline-danger:hover {
            color: #fff;
        }

        .rounded-2 {
            border-radius: 8px !important;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tooltip initialization
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}