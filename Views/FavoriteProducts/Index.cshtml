@model List<Product>
@{
    ViewData["Title"] = "Favori Ürünlerim";
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h2 class="fw-bold text-gradient">
            <i class="fas fa-heart text-danger me-2"></i> @ViewData["Title"]
        </h2>
        <a href="@Url.Action("Index", "Products")" class="btn btn-outline-primary rounded-pill">
            <i class="fas fa-arrow-left me-1"></i> Alışverişe Devam Et
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm hover-lift">
                        @{
                            var mainImage = product.Images?.FirstOrDefault(img => img.IsMainImage);
                            var imageUrl = mainImage?.ImageUrl ?? "/images/default-product.png";
                        }
                        <div class="position-relative overflow-hidden" style="height: 220px;">
                            <img src="@imageUrl" class="card-img-top h-100 w-100 object-fit-cover" alt="@product.Name">
                            <div class="position-absolute top-0 end-0 p-2">
                                <button class="btn btn-danger btn-icon rounded-circle shadow remove-favorite"
                                        data-product-id="@product.Id"
                                        data-bs-toggle="tooltip"
                                        data-bs-title="Favorilerden çıkar">
                                    <i class="fas fa-heart"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-column h-100">
                                <h5 class="card-title mb-2 text-truncate">@product.Name</h5>
                                <div class="mt-auto">
                                    <p class="card-text text-success fw-bold fs-5 mb-3">@product.Price.ToString("C")</p>
                                    <div class="d-grid gap-2">
                                        <a href="@Url.Action("Details", "SaleProducts", new { id = product.Id })"
                                           class="btn btn-primary rounded-pill">
                                            <i class="fas fa-shopping-cart me-1"></i> Ürün Detay
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-heart-broken text-muted" style="font-size: 5rem;"></i>
            </div>
            <h4 class="fw-semibold mb-3">Favori Ürün Bulunamadı</h4>
            <p class="text-muted mb-4">Henüz hiç ürün beğenmediniz. Mağazamızda sizi etkileyecek ürünler keşfedin!</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary rounded-pill px-4">
                <i class="fas fa-store me-1"></i> Ürünleri Keşfet
            </a>
        </div>
    }
</div>

@section Styles {
    <style>
        .text-gradient {
            background: linear-gradient(45deg, #6a11cb, #2575fc);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

        .hover-lift {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border-radius: 12px;
            overflow: hidden;
        }

            .hover-lift:hover {
                transform: translateY(-5px);
                box-shadow: 0 1rem 2.5rem rgba(0, 0, 0, 0.1) !important;
            }

        .object-fit-cover {
            object-fit: cover;
        }

        .btn-icon {
            width: 36px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

        .card-title {
            min-height: 48px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Tooltip initialization
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            $('.remove-favorite').click(function () {
                var productId = $(this).data('product-id');
                var card = $(this).closest('.col-xl-3');

                $.post('@Url.Action("ToggleFavorite", "FavoriteProducts")', { productId: productId }, function (response) {
                    if (response.success) {
                        card.animate({ opacity: 0 }, 300, function() {
                            $(this).animate({ height: 0, margin: 0 }, 200, function() {
                                $(this).remove();

                                // Eğer hiç ürün kalmadıysa sayfayı yenile
                                if ($('.remove-favorite').length === 0) {
                                    setTimeout(() => location.reload(), 300);
                                }
                            });
                        });
                    }
                });
            });
        });
    </script>
}